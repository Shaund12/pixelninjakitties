{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pixel Ninja Cats NFT Metadata",
  "description": "JSON schema for validating Pixel Ninja Cats NFT metadata structure",
  "type": "object",
  "required": [
    "metadata_version",
    "name",
    "description",
    "image",
    "attributes"
  ],
  "properties": {
    "metadata_version": {
      "type": "string",
      "description": "Metadata schema version",
      "enum": ["2.0"]
    },
    "name": {
      "type": "string",
      "description": "Name of the NFT",
      "minLength": 1,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "description": "Description of the NFT",
      "minLength": 1,
      "maxLength": 2000
    },
    "image": {
      "type": "string",
      "description": "URI to the NFT image",
      "format": "uri",
      "pattern": "^(https?://|ipfs://)"
    },
    "external_url": {
      "type": "string",
      "description": "External URL for the NFT",
      "format": "uri"
    },
    "attributes": {
      "type": "array",
      "description": "Array of trait attributes",
      "minItems": 5,
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": ["trait_type", "value"],
        "properties": {
          "trait_type": {
            "type": "string",
            "description": "Type of trait",
            "enum": [
              "Breed",
              "Weapon", 
              "Stance",
              "Element",
              "Rank",
              "Accessory",
              "Background",
              "Agility",
              "Stealth",
              "Power",
              "Intelligence",
              "Technique",
              "Skill",
              "Move",
              "Style",
              "Secret",
              "Ability",
              "Mastery",
              "Blessing",
              "Title"
            ]
          },
          "value": {
            "oneOf": [
              {
                "type": "string",
                "minLength": 1,
                "maxLength": 50
              },
              {
                "type": "number",
                "minimum": 1,
                "maximum": 10
              }
            ]
          },
          "display_type": {
            "type": "string",
            "description": "Display type for numeric values",
            "enum": ["number", "boost_number", "boost_percentage", "date"]
          },
          "max_value": {
            "type": "number",
            "description": "Maximum value for numeric traits"
          }
        },
        "additionalProperties": false
      }
    },
    "generationInfo": {
      "type": "object",
      "description": "Information about NFT generation",
      "properties": {
        "prompt": {
          "type": "string",
          "description": "AI prompt used for generation"
        },
        "provider": {
          "type": "string",
          "description": "AI provider used",
          "enum": ["dall-e", "stability", "huggingface"]
        },
        "model": {
          "type": "string",
          "description": "AI model used"
        },
        "providerOptions": {
          "type": "object",
          "description": "Provider-specific options"
        },
        "timestamp": {
          "type": "number",
          "description": "Generation timestamp"
        },
        "rarity": {
          "type": "object",
          "description": "Rarity information",
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 200
            },
            "tier": {
              "type": "string",
              "enum": ["Standard", "Common", "Uncommon", "Rare", "Epic", "Legendary", "Mythic"]
            }
          },
          "required": ["score", "tier"]
        },
        "background": {
          "type": "string",
          "description": "Background name"
        },
        "generation": {
          "type": "object",
          "description": "Generation details",
          "properties": {
            "version": {
              "type": "string",
              "description": "Generation version"
            },
            "engine": {
              "type": "string",
              "description": "Generation engine"
            },
            "promptEnhanced": {
              "type": "boolean",
              "description": "Whether prompt was enhanced"
            },
            "negativePrompt": {
              "type": "string",
              "description": "Negative prompt used"
            },
            "generationTime": {
              "type": "number",
              "description": "Time taken to generate"
            }
          }
        },
        "stats": {
          "type": "object",
          "description": "Processing statistics",
          "properties": {
            "processingTime": {
              "type": "object",
              "description": "Time breakdown",
              "properties": {
                "total": {
                  "type": "string",
                  "description": "Total processing time"
                },
                "image": {
                  "type": "string",
                  "description": "Image generation time"
                },
                "processing": {
                  "type": "string",
                  "description": "Image processing time"
                },
                "upload": {
                  "type": "string",
                  "description": "Upload time"
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}